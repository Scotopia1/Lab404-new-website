{
  "name": "@lab404/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "test": "tsx tests/run-tests.ts",
    "test:security": "tsx tests/security-audit.ts",
    "test:all": "tsx tests/run-tests.ts && tsx tests/security-audit.ts",
    "db:check": "tsx -e \"const { checkDbHealth } = require('./src/utils/db-health'); checkDbHealth().then(console.log).catch(console.error)\"",
    "sync:search": "tsx --env-file=../../.env scripts/sync-meilisearch.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "@types/cookie-parser": "^1.4.10",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.3.0",
    "drizzle-orm": "^0.36.0",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "googleapis": "^144.0.0",
    "helmet": "^8.0.0",
    "imagekit": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "meilisearch": "^0.54.0",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "pdfkit": "^0.15.0",
    "slugify": "^1.6.6",
    "ua-parser-js": "2.0.2",
    "uuid": "^10.0.0",
    "xss": "^1.0.15",
    "zod": "^3.23.0",
    "zxcvbn": "4.4.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.21",
    "@types/pdfkit": "^0.13.5",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
