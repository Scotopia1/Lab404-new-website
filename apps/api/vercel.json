{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "crons": [
    {
      "path": "/api/cron/newsletter-send",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/quotation-expiry-check",
      "schedule": "0 8 * * *"
    }
  ],
  "builds": [
    {
      "src": "output/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/output/index.js"
    }
  ]
}
